{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["deep-read"],
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@deep-read/types": ["./types/dist/src/index.d.ts"],
      "@deep-read/types/*": ["./types/dist/src/*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  }
}
